<?xml version="1.0" encoding="utf-8"?>
  <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/essay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/essay" />

        <ImageButton
            android:id="@+id/quiz"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/essay"
            android:layout_marginTop="30dp"
            android:src="@drawable/quiz" />

        <ImageButton
            android:id="@+id/olympiad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/quiz"
            android:layout_marginTop="30dp"
            android:src="@drawable/olympiad" />

        <ImageButton
            android:id="@+id/wordgame"

            android:layout_width="match_parent"
            android:layout_height="202dp"
            android:layout_below="@id/olympiad"
            android:layout_marginTop="30dp"
            android:src="@drawable/wordgame" />

    </RelativeLayout>
</ScrollView>